<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/security
      http://www.springframework.org/schema/security/spring-security-4.0.xsd
      http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<global-method-security pre-post-annotations="enabled" />

	<http use-expressions="true">
		<csrf disabled="true" />

		<intercept-url pattern="/" access="permitAll()" />
		<intercept-url pattern="/login" access="permitAll()" />
		<intercept-url pattern="/logout" access="permitAll()" />
		<intercept-url pattern="/resources/**" access="permitAll()" />

		<!-- Cau hinh cac trang quyen danh rieng cho admin -->
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />

		<!-- Cau hinh cac trang quyen danh reing cho editor va admin -->
		<intercept-url pattern="/editor/**" access="hasAnyRole('ROLE_EDITOR', 'ROLE_ADMIN')" />

		<!-- Cau hinh cac quyen chung danh cho ca 3 quyen -->
		<intercept-url pattern="/home"
			access="hasAnyRole('ROLE_EDITOR', 'ROLE_ADMIN', 'ROLE_COLLABORARATORS')" />
		<intercept-url pattern="thong-tin-ca-nhan"
			access="hasAnyRole('ROLE_EDITOR', 'ROLE_ADMIN', 'ROLE_COLLABORARATORS')" />
		<intercept-url pattern="/bai-viet/**"
			access="hasAnyRole('ROLE_EDITOR', 'ROLE_COLLABORARATORS', 'ROLE_ADMIN')" />
		<intercept-url pattern="/video/**"
			access="hasAnyRole('ROLE_EDITOR', 'ROLE_COLLABORARATORS', 'ROLE_ADMIN')" />
		<intercept-url pattern="/binh-luan/**"
			access="hasAnyRole('ROLE_EDITOR', 'ROLE_COLLABORARATORS', 'ROLE_ADMIN')" />
		<intercept-url pattern="/notification/**"
			access="hasAnyRole('ROLE_EDITOR', 'ROLE_COLLABORARATORS', 'ROLE_ADMIN')" />

		<access-denied-handler error-page="/403" />

		<form-login login-page='/login' login-processing-url="/login"
			default-target-url="/home" always-use-default-target="false"
			authentication-failure-url="/loginfailed" username-parameter="username"
			password-parameter="password" />

		<logout logout-url="/logout" logout-success-url="/login"
			delete-cookies="JSESSIONID" invalidate-session="true" />

		<remember-me key="uniqueAndSecret" token-validity-seconds="1296000" />

	</http>

	<authentication-manager alias="authenticationManager">
		<authentication-provider user-service-ref="userServiceDetails">
			<password-encoder ref="bCryptPasswordEncoder"></password-encoder>
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="userServiceDetails"
		class="vn.edu.vnua.dse.service.Impl.UserDetailsServiceImpl"></beans:bean>

	<beans:bean id="bCryptPasswordEncoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
		<beans:constructor-arg name="strength" value="12" />
	</beans:bean>

</beans:beans>